<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text style. -->
    <style name="CustomText">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="CustomText.LargeTitle1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomText.Title1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomText.Title2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomText.Title3">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomText.Title4">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomText.TitleSecondary1">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomText.ButtonText1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--  ProgressBar  -->
    <style name="BaseProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/elem_orange500</item>
    </style>

    <!--  Button  -->
    <style name="BaseButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/elem_orange500</item>
        <item name="cornerRadius">@dimen/corner_5dp</item>
    </style>

    <style name="BaseButton.Main">
        <item name="textAllCaps">true</item>
        <item name="android:textAppearance">@style/CustomText.ButtonText1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--  Chip  -->
    <style name="Colors_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStartPadding">@dimen/padding_25dp</item>
        <item name="chipEndPadding">@dimen/padding_25dp</item>
        <item name="android:textAppearance">@style/CustomText.Title3</item>
        <item name="chipBackgroundColor">@drawable/chip_background</item>
        <item name="android:textColor">@drawable/chip_text_color</item>
    </style>

</resources>